<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/parent_login_phone_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login_phone.LogInPhoneFragment"
        android:orientation="vertical"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Name"
            android:textColorHint="@color/black"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            >

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Phone"
            android:textColorHint="@color/black"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            >

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="phone"
                android:background="@android:color/transparent"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Code"
            android:textColorHint="@color/black"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            android:visibility="gone"
            >

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@android:color/transparent"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Send Code"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_phone_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Login Phone"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/txt_register_new_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Register New Account"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/txt_login_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Login E-mail"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>

    </LinearLayout>

</layout>